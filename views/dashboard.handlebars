<main>
  <h2>Your Dashboard</h2>
  {{#if posts.length}}
    <section>
      {{#each posts}}
        <article>
          <h3>{{this.title}}</h3>
          <p>{{this.body}}</p>
          <a href="/post/{{this.id}}">View Post</a>
        </article>
      {{/each}}
    </section>
  {{else}}
    <p>No posts yet. <a href="/api/dashboard/create-post">Create your first post</a></p>
  {{/if}}

  <a href="/api/dashboard/create-post" class="btn">Create New Post</a>
</main>
